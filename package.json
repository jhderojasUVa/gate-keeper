{
    "name": "@jhderojas/gate-keeper",
    "version": "1.0.0",
    "description": "First line of defense of your trunk development",
    "main": "./src/index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "npm run test:unit",
        "test:unit": "jest --coverage",
        "prepare": "husky install",
        "cz": "cz",
        "release": "standard-version",
        "release:minor": "standard-version --release-as minor",
        "release:patch": "standard-version --release-as patch",
        "release:major": "standard-version --release-as major"
    },
    "bin": {
        "gate-keeper": "./src/server/index.mjs",
        "gate-keeper-init": "./src/init.mjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhderojasUVa/gate-keeper.git"
    },
    "keywords": [
        "trunk",
        "gate",
        "keeper",
        "code",
        "git"
    ],
    "author": "Jesus Angel Hernandez de Rojas <jhderojas@gmail.com>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/jhderojasUVa/gate-keeper/issues"
    },
    "homepage": "https://github.com/jhderojasUVa/gate-keeper#readme",
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@eslint/js": "^9.5.0",
        "@stylistic/eslint-plugin-js": "^2.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.5.0",
        "globals": "^15.6.0",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "standard-version": "^9.5.0"
    },
    "dependencies": {
        "express": "^4.19.2",
        "selfsigned": "^2.4.1",
        "ws": "^8.17.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
